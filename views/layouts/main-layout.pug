//- adding in mixins
include ../../mixins/mixins

doctype html
html(lang="en")

  head

    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    //- Add Bootstrap
    link(rel="stylesheet", type="text/css", href="/css/bootstrap.min.css")
     //-  Link custom layout Css
    link(rel="stylesheet", type="text/css", href="/css/main.css")

    title #{pageTitle}

  body

    //- Create layout using Bootstrap grid
    .wrapper
      .row
        //- responsive layout >  nav will stay at col width
        nav.col-2
          //- Adding Nav icons
          //- a: link set up
          //- i: Fontawesome classes
          a.logo(href="/")
            i.fa-solid.fa-dove
          a(href="/")
            i.fa-solid.fa-house
          a(href="/search")
            i.fa-solid.fa-magnifying-glass
          a(href="/notifications")
            i.fa-solid.fa-bell      
          a(href="/messages")
            i.fa-solid.fa-envelope          
          a(href="/profile")
            i.fa-solid.fa-user          
          a(href="/logout")
            i.fa-solid.fa-right-from-bracket          

          //- Dev note: adding multiple columns using pug
          //- responsive layout > container will take up 10 cols then shrink to 8 cols on medium screens and 6 cols on large
        .mainSectionContainer.col-10.col-md-8.col-lg-6
          //- Add page title 
          .titleContainer 
            h1 #{pageTitle}
          //- Add block Content
          block content
        //- class d-none will hide third column  ( display none )
        //- Responsive layout > d-md-clock - on medium size screens or above third column will display as block item at 2 cols and 4 cols on large
        .d-none.d-md-block.col-md-2.col-lg-4
          span third column

    //- Add Bootstap scripts
    script(src="/js/bootstrap.js")
    //- Add Fontawesome scripts 
    script(src="/js/all.js")
    //- Add Jquery scripts
    script(src="jquery.min.js")
    //- Add custom common.js scripts
    script(src="/js/common.js")